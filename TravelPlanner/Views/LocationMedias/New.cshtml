@model LocationMedia

<h2 class="text-center">New Location Media</h2>

<form asp-controller="LocationMedias" asp-action="Create" method="POST">
  <div class="form-group">
    <label asp-for="Location"></label>
    <span asp-validation-for="Location" class="text-danger"></span>
    <input asp-for="Location" class="form-control">
  </div>

  <div class="form-group">
    <label asp-for="Src"></label>
    <span asp-validation-for="Src" class="text-danger"></span>
    <input asp-for="Src" class="form-control">
  </div>

  <div class="form-group">
    <label asp-for="MediaType"></label>
    <span asp-validation-for="MediaType" class="text-danger"></span>
    <select asp-for="MediaType" class="form-control">
      <option value="Image">Image</option>
      <option value="Youtube Embed">Youtube Embed</option>
      <option value="Google Maps Embed">Google Maps Embed</option>
      <option value="Website Embed">Website Embed</option>
    </select>
  </div>

  <div class="form-group">
    <label asp-for="ShortDescription"></label>
    <span asp-validation-for="ShortDescription" class="text-danger"></span>
    <input asp-for="ShortDescription" class="form-control">
  </div>

  <button class="btn btn-outline-info">Submit</button>
</form>